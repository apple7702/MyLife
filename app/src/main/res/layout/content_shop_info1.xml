<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.andi.mylife.MainActivity"
    tools:showIn="@layout/activity_shop_info1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/title_bk" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Nearby Shops"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="510dp"
        android:layout_marginTop="70dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/fitnesstips_vp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_gravity="bottom"
            android:background="#85000000"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="!"
                android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:gravity="center" >

                <View
                    android:id="@+id/v_dot_a"
                    style="@style/dot_style"
                    android:background="@drawable/dot_focused" />

                <View
                    android:id="@+id/v_dot_b"
                    style="@style/dot_style" />

                <View
                    android:id="@+id/v_dot_c"
                    style="@style/dot_style" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


    <ImageView
        android:layout_width="297dp"
        android:layout_height="295dp"
        android:id="@+id/restaurant_shop"
        android:background="@drawable/shop1"
        android:layout_below="@+id/left_bar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="0dp"/>

    <ImageView
        android:layout_width="297dp"
        android:layout_height="295dp"
        android:id="@+id/gym_shop"
        android:background="@drawable/shop2"
        android:layout_alignTop="@+id/restaurant_shop"
        android:layout_marginLeft="302dp" />

    <ImageView
        android:layout_width="297dp"
        android:layout_height="295dp"
        android:id="@+id/theatre_shop"
        android:background="@drawable/shop3"
        android:layout_alignTop="@+id/restaurant_shop"
        android:layout_marginLeft="604dp" />

    <ImageView
        android:layout_width="297dp"
        android:layout_height="295dp"
        android:id="@+id/ktv_shop"
        android:background="@drawable/shop4"
        android:layout_below="@+id/restaurant_shop"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"/>

    <ImageView
        android:layout_width="297dp"
        android:layout_height="295dp"
        android:id="@+id/life_shop"
        android:background="@drawable/shop5"
        android:layout_alignTop="@+id/ktv_shop"
        android:layout_marginLeft="302dp" />

    <ImageView
        android:layout_width="297dp"
        android:layout_height="295dp"
        android:id="@+id/hotel_shop"
        android:background="@drawable/shop6"
        android:layout_alignTop="@+id/ktv_shop"
        android:layout_marginLeft="604dp" />

    <Button
        android:id="@+id/main11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:background="#00000000"
        android:layout_below="@+id/left_bar"
        android:layout_marginTop="825dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gym"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:background="#00000000"
        android:id="@+id/main22"
        android:layout_alignTop="@+id/main11"
        android:layout_alignStart="@+id/gym_shop"
        android:layout_marginStart="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theatre"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:background="#00000000"
        android:id="@+id/main3"
        android:layout_alignTop="@+id/main11"
        android:layout_alignStart="@+id/gym_shop"
        android:layout_marginStart="360dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KTV"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:background="#00000000"
        android:id="@+id/main33"
        android:layout_alignBottom="@+id/ktv_shop"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:background="#00000000"
        android:id="@+id/main5"
        android:layout_alignTop="@+id/main33"
        android:layout_marginLeft="400dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:background="#00000000"
        android:id="@+id/main6"
        android:layout_alignTop="@+id/main33"
        android:layout_marginLeft="690dp" />



</RelativeLayout>
