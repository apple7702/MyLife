<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text=""
        android:background="#00000000"
        android:id="@+id/restaurant_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:id="@+id/pic_restaurant_item"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
         />

    <TextView
        android:id="@+id/name_restaurant_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="22dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tag_restaurant_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_restaurant_item"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="26dp"
        android:textSize="18sp"
        android:text="tag"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/price_restaurant_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="price"
            />

    </LinearLayout>




</RelativeLayout>